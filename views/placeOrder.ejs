<%- include("../partials/navbar.ejs") %>

  <head>
    <style>
      /* Internal CSS styles for the table */
      table.text-center {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        margin-bottom: 20px;
      }

      table.text-center th,
      table.text-center td {
        padding: 8px;
        border: 1px solid #ddd;
      }

      table.text-center th {
        background-color: #f2f2f2;
        font-weight: bold;
      }

      table.text-center td {
        text-align: center;
      }

      /* Additional styles for the form */
      form {
        display: flex;
        align-items: center;
      }

      label {
        margin-right: 10px;
      }

      select {
        margin-right: 10px;
      }

      .orderstatus {
        text-transform: capitalize;
      }
    </style>
  </head>

  <main class="mt-5 pt-4">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12 fw-bold fs-3 mt-2 text-center">Order Details</div>
      </div>
      <table class="table text-center">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Full Name</th>
            <th scope="col">Email</th>
            <th scope="col">City</th>
            <th scope="col">Payment Method</th>
            <th scope="col">Amount Rs</th>
            <th scope="col">Status</th>
            <th scope="col">Order Place At</th>
            <th scope="col">Edit Order Status</th>
            <!-- <th scope="col">Edit</th> -->
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(function(order, index) { %>
            <tr>
              <th scope="row">
                <%= index + 1 %>
              </th>
              <td>
                <%= order.billingAddress.fullName %>
              </td>
              <td>
                <%= order.billingAddress.email %>
              </td>
              <td>
                <%= order.billingAddress.city %>
              </td>
              <td>
                <%= order.payment.method %>
              </td>
              <td>
                <%= order.totalAmount %>
              </td>
              <td class="orderstatus" id="status<%= index %>">
                <%= order.status %>
              </td>
              <td>
                <%= order.createdAt %>
              </td>
              <td>
                <form method="put" id="updateForm_<%= order._id %>" data-order-id="<%= order._id %>"
                  data-index="<%= index %>">
                  <label for="statusSelect_<%= index %>">Change Status:</label>
                  <select name="status" id="statusSelect_<%= index %>">
                    <option value="pending" <%=order.status==='pending' ? 'selected' : '' %>>Pending</option>
                    <option value="dispatched" <%=order.status==='dispatched' ? 'selected' : '' %>>Dispatched</option>
                    <option value="shipped" <%=order.status==='shipped' ? 'selected' : '' %>>Shipped</option>
                  </select>
                  <button type="submit" class="btn btn-primary btn-sm m-2">Update Status</button>
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </main>

  <script>
    document.querySelectorAll('form[id^="updateForm_"]').forEach((form) => {
      form.addEventListener('submit', async (event) => {
        event.preventDefault();
        const formData = new FormData(form);
        const orderId = form.dataset.orderId;
        const newStatus = formData.get('status');

        try {
          const response = await fetch(`/orders/${orderId}`, {
            method: 'PUT',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ status: newStatus })
          });

          if (response.ok) {
            const updatedOrder = await response.json();
           
            document.getElementById(`status${form.dataset.index}`).textContent = updatedOrder.status;
          } else {
            console.error('Failed to update order status:', response.statusText);
          }
        } catch (error) {
          console.error('Error updating order status:', error);
        }
      });
    });
  </script>

