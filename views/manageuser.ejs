<%- include("../partials/navbar.ejs") %>

<main class="mt-5 pt-5">
  <div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="card border-dark text-center">
        <div class="card-header border-dark fw-bold fs-2">MANAGE USERS</div>
        <table class="table border-dark">
          <thead>
            <tr>
              <th scope="col">Sr. No.</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% user.forEach(function(users, index) { %>
              <tr>
                <th scope="row">
                  <%= index + 1 %>
                </th>
                <td>
                  <%= users.name %>
                </td>
                <td>
                  <%= users.email %>
                </td>
                <td><a href="/manageuser/delete/<%= users._id %>" class="btn btn-danger">DELETE</a></td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  </div>
  </main>

  <%- include("../partials/script.ejs") %>