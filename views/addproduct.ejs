<%- include("../partials/navbar.ejs") %>

    <main class="mt-5 pt-3">
        <div class="fw-b fs-3 pt-4 container-fluid text-center">Add Product</div>
        <div class="container m-40 w-50 text-start">
            <form action="/addproduct" method="post" enctype="multipart/form-data">
                <div class="mb-3">

                    <label class="form-label">Product Name</label>
                    <input type="text" class="form-control " style="border: 1px solid black;" name="name">
                </div>
                <div class="mb-3">
                    <label class="form-label">Amount</label>
                    <input type="text" class="form-control " style="border: 1px solid black;" name="amount">
                </div>

                <span>Add Image</span>
                <div class="input-group mb-3 pt-2">
                    <input type="file" class="form-control" name="coverimage" style="border: 1px solid black;" id="inputGroupFile02">
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <input type="text" class="form-control " style="border: 1px solid black;" name="description">
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </main>

    <%- include("../partials/script.ejs") %>